<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.frabbi.meem.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loginLayout"
        android:visibility="visible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desLogin"
            android:text="Login"
            android:textColor="@color/custom4"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enReg"
            android:text="Registration"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp"
            android:textSize="20dp"
            android:layout_above="@+id/loginFields"
            android:layout_alignRight="@+id/loginFields"
            android:layout_alignEnd="@+id/loginFields" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button"
            android:padding="10dp"
            android:id="@+id/loginFields"
            android:layout_below="@+id/desLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Id"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/userId"
                android:background="@drawable/edittext"
                android:drawableLeft=""
                android:textSize="25dp"
                android:textColor="@color/text"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_below="@+id/userId"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/edittext"
                android:textSize="25dp"
                android:textColor="@color/text"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/desLogin"
            android:layout_toEndOf="@+id/desLogin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/regLayout"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enLogin"
            android:text="Login"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desReg"
            android:text="Registration"
            android:textColor="@color/custom4"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button"
            android:padding="10dp"
            android:id="@+id/regFields"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Id"
                android:inputType="text"
                android:singleLine="true"
                android:id="@+id/newUserId"
                android:background="@drawable/edittext"
                android:textSize="25dp"
                android:textColor="@color/text"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:inputType="text"
                android:hint="Full Name"
                android:singleLine="true"
                android:textColor="@color/text"
                android:layout_margin="10dp"
                android:background="@drawable/edittext"
                android:textSize="25dp"
                android:layout_below="@+id/newUserId"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/newPassword"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_below="@+id/name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/edittext"
                android:textSize="25dp"
                android:textColor="@color/text"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:id="@+id/conPassword"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_below="@+id/newPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/edittext"
                android:textSize="25dp"
                android:textColor="@color/text"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/enLogin"
            android:layout_toEndOf="@+id/enLogin"
            android:id="@+id/button" />

    </RelativeLayout>


</RelativeLayout>



